            text-align: center;
        }

        .emoji::after {
            animation-timing-function: linear;
            animation-iteration-count: infinite;
        }

        .smile {
            font-size: 30px;
        }

        .monkey::after {
            content: 'üôà';
            --emoji-1: 'üôâ';
            --emoji-2: 'üôä';
            animation-name: threeFrames;
            animation-duration: 2s;
        }

        .wave::after {
            content: '‚úã';
            --emoji: 'üëã';
            animation-name: twoFrames;
            animation-duration: 1s;
        }

        .smile::after {
            content: 'üòÑ';
            --emoji: 'üòÅ';
            animation-name: twoFrames;
            animation-duration: 1s;
        }

        @keyframes twoFrames {
            50% {
                content:
                    var(--emoji);
            }
        }

        @keyframes threeFrames {
            33.333% {
                content:
                    var(--emoji-1);
            }

            66.666% {
                content: var(--emoji-2);
            }
        }
    </style>
</head>

